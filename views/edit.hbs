<h1>Edit</h1>

<form action="/{{id}}" method="POST">
  <div class="form-group">
    <label for="item-name">Item Name</label>
    <input name="item-name" type="text" class="form-control" id="item-name" placeholder="Item name">
  </div>
   <div class="form-group">
    <label for="item-price">Item Price</label>
    <input name="item-price" type="number" class="form-control" id="item-price" placeholder="Item price">
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>